@page
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Validation.Localization
@model EasyAbp.Abp.TagHelperPlus.Pages.Books.Book.IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<AbpValidationResource> L
@{
    PageLayout.Content.Title = L["Menu:Book"].Value;
    PageLayout.Content.MenuItemName = "Book";
}

<script>
    var userId = "@Model.UserId";
</script>

@section scripts
{
    <abp-script src="/Pages/Books/Book/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Books/Book/index.css"/>
}
@section content_toolbar
{
    <abp-button id="NewBookButton"
                text="New"
                icon="plus"
                size="Small"
                button-type="Primary" />
}

<abp-card>
    <abp-card-body>
        <abp-table striped-rows="true" id="BookTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["Name"]</th>
                <th>@L["User"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>